[colors]
black = ${xrdb:color0}
bblack = ${xrdb:color8}
red = ${xrdb:color1}
bred = ${xrdb:color9}
green = ${xrdb:color2}
bgreen = ${xrdb:color10}
yellow = ${xrdb:color3}
byellow = ${xrdb:color11}
blue = ${xrdb:color4}
bblue = ${xrdb:color12}
magenta = ${xrdb:color5}
bmagenta = ${xrdb:color13}
cyan = ${xrdb:color6}
bcyan = ${xrdb:color14}
white = ${xrdb:color7}
bwhite = ${xrdb:color15}

bg = ${xrdb:bg}
fg = ${colors.magenta}

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
enable-ipc = true
monitor = DP-0
monitor-strict = true
width = 100%
height = 22
offset-x = 0
offset-y = 0

overline-size = 1
overline-color = ${colors.red}
underline-size = 1
underline-color = #00f

border-bottom-size = 2
border-bottom-color = #333

padding-left = 3
padding-right = 3
module-margin-left = 1
module-margin-right = 1

bg = ${colors.bg-alt}
fg = ${colors.fg}

font-0 = "Pomicons:size=9;1"
font-1 = "Iosevka:size=8;1"
font-2 = "Font Awesome:size=8;1"

modules-left = ewmh dunst pulseaudio spotify xwindow
modules-center =
modules-right = redshift pomodoro cpu memory wired wireless date

tray-position = right

